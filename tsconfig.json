{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "screens/*": ["./src/screens/*"],
      "Components/*": ["./src/Components/*"],
      "Contexts/*": ["./src/Contexts/*"],
      "types/*": ["./src/types/*"],
      "service/*": ["./src/service/*"],
      "images/*": ["./src/assets/images/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "metro.config.js", "tailwind.config.js"]
}
